@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanı ile ilgili işlemleri aşağıdan yapabilirsiniz. Tema bütünlüğü için sadece 1 tane
							hakkımıda alanı oluşturmayı unutmayın...
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutID</td>
										<td>@item.AboutTitle</td>
										<td>@item.AboutDescription</td>
										<td><a href="/About/AboutDelete/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/AboutUpdate/@item.AboutID" class="btn btn-outline-primary">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/About/AboutCreate/" class="btn btn-success">Yeni Hakkımızda Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
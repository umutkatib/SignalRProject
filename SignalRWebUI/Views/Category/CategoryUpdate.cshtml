@model UpdateCategoryDto

@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Kategori Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="CategoryID" />
							<div class="form-group">
								<label for="CategoryName">Kategori Adı</label>
								<input asp-for="CategoryName" type="text" class="form-control" id="CategoryName">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Kategoriyi Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
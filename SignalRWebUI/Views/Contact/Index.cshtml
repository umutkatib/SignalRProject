@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim alanı ile ilgili işlemleri aşağıdan yapabilirsiniz. Tema bütünlüğü için sadece 1 tane
							İletişim alanı oluşturmayı unutmayın...
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactID</td>
										<td>@item.ContactLocation</td>
										<td>@item.ContactPhone</td>
										<td>@item.ContactMail</td>
										<td>@item.ContactFooterDescription</td>
										<td><a href="/Contact/ContactDelete/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Contact/ContactUpdate/@item.ContactID" class="btn btn-outline-primary">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/ContactCreate/" class="btn btn-success">Yeni İletişim Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
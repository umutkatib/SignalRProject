@model List<ResultSocialMediaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili işlemleri aşağıdan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Link</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMediaID</td>
										<td>@item.SocialMediaTitle</td>
										<td>@item.SocialMediaUrl</td>
										<td><a href="/SocialMedia/SocialMediaDelete/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/SocialMedia/SocialMediaUpdate/@item.SocialMediaID" class="btn btn-outline-primary">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/SocialMedia/SocialMediaCreate/" class="btn btn-success">Yeni Sosyal Medya Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

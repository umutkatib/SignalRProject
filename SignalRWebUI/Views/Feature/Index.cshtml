@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Öne Çıkan ile ilgili işlemleri aşağıdan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık 1</th>
									<th scope="col">Başlık 2</th>
									<th scope="col">Başlık 3</th>
									<th scope="col">Açıklama 1</th>
									<th scope="col">Açıklama 2</th>
									<th scope="col">Açıklama 3</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.FeatureID</td>
										<td>@item.FeatureTitle1</td>
										<td>@item.FeatureTitle2</td>
										<td>@item.FeatureTitle3</td>
										<td>@item.FeatureDescription1</td>
										<td>@item.FeatureDescription2</td>
										<td>@item.FeatureDescription3</td>
										<td><a href="/Feature/FeatureDelete/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Feature/FeatureUpdate/@item.FeatureID" class="btn btn-outline-primary">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Feature/FeatureCreate/" class="btn btn-success">Yeni Öne Çıkan Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>